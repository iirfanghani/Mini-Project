<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="css/styles.css">
  <title>FoodXpress</title>
</head>
<body>
  <header class="header">
    <a href="#" class="logo">FoodXpress</a>
    <nav class="navbar">
        <a href="/home">Home</a>
        <a href="/menu">Menu</a>
        <a href="/contact">Contact</a>
    </nav>
  </header>

  <section class="section food-menu" id="food-menu">
    <div class="container">
      <h1 class="section-title">Our Menu</h1>
      <ul class="fiter-list">

        <li>
          <button class="filter-btn active">All</button>
        </li>

        <li>
          <button class="filter-btn">Western</button>
        </li>

        <li>
          <button class="filter-btn">Asian</button>
        </li>

        <li>
          <button class="filter-btn">Indian</button>
        </li>

        <li>
          <button class="filter-btn">Mexican</button>
        </li>

        <li>
          <button class="filter-btn">Dessert</button>
        </li>

      </ul>

      <ul class="food-menu-list">
        <% if (menu && menu.length > 0) { %> <!-- Check if menu exist and have items -->
          <% for(let i = 0; i < menu.length; i++) { %> <!-- Loop through menu items -->
            <li>
              <div class="food-menu-card">
                <div class="card-banner">
                  <img src="images/<%= menu[i].image %>" width="300" height="300" loading="lazy"
                    alt="<%= menu[i].name %>" class="w-100">
                </div>
                <div class="wrapper">
                  <p class="category"><%= menu[i].category %></p>
                </div>
                <h3 class="h3 card-title"><a href="/item/<%= menu[i].itemId %>"><%= menu[i].name %></a></h3>
                <div class="price-wrapper">
                  <p class="price-text"></p>
                  <data class="price">$<%= menu[i].price %></data>
                </div>
                <div class="card-actions">
                  <a href="/editItem/<%= menu[i].itemId %>" class="btn menu-btn edit-btn">Edit</a>
                  <a href="/deleteItem/<%= menu[i].itemId %>" class="btn menu-btn delete-btn" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </div>
              </div>
            </li>
          <% } %>
        <% } else { %>
          <p>No menu found.</p>
        <% } %>
      </ul>
      <div class="add-btn">
        <a href="/addItem" class="btn item-btn">Add New Item</a>
      </div>
    </div>
  </section>
</body>
</html>
